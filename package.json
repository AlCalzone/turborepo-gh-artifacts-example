{
  "name": "turborepo-basic-shared",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build:action": "ncc build turbo-server.js -o dist",
    "build": "rm -rf node_modules/.cache/turbo && turbo run build --api=\"http://localhost:9080\" --token=\"xxxxxxxxxxxxxxxxx\" --team=\"hayokra\"",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@types/node": "^17.0.7",
    "@vercel/ncc": "^0.33.1",
    "fs-extra": "^10.0.0",
    "prettier": "^2.5.1",
    "turbo": "latest"
  },
  "turbo": {
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**",
          ".next/**"
        ]
      },
      "lint": {
        "outputs": []
      },
      "dev": {
        "cache": false
      }
    }
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@actions/artifact": "^0.6.1",
    "@actions/core": "^1.6.0",
    "axios": "^0.24.0",
    "express": "^4.17.2",
    "express-async-handler": "^1.2.0"
  }
}
